<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/etNumZonas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de zonas"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNumCirculos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Círculos por zona"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/etNumZonas"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnGenerarCampos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generar Campos"
        app:layout_constraintTop_toBottomOf="@id/etNumCirculos"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/zonaInputs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/btnGenerarCampos"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintTop_toBottomOf="@id/zonaInputs"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>